{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src="https://placekitten.com/420/320" alt="" class="img-fluid">
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
        <h1> {{member.name}} </h1>
        <h2> {{member.instruments}} </h2>
        <img {{member.image}} >
        <p> {{member.text}} </p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
