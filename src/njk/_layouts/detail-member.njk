{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      <img src="img/{{ member.image }}" class= "img-fluid">
    </div>
    <div class="col-sm-8">
      {% block story %}
        <h1> {{member.name}} </h1>
        <h2> {{member.instruments}} </h2>
        <h3> {{member.tenure}} </h3>
        <p> {{member.text|safe}} </p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
